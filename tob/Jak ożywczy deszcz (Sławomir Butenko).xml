  <properties>
    <titles>
      <title>Jak ożywczy deszcz</title>
    </titles>
    <authors>
      <author type="words">Sławomir Butenko</author>
      <author type="music">Sławomir Butenko</author>
    </authors>
    <songbooks>
      <songbook name="Różnymi Pieśniami"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Jak ożywczy deszcz<br/>Duchu Święty przyjdź<br/>Dotknij naszych serc<br/>Rozpal ognia żar. // x2 //</lines>
    </verse>
    <verse name="c1">
      <lines>Dziś przenikaj nas<br/>Tchnieniem mocy Swej<br/>Bądź nam światłem dnia<br/>I nadzieją serc. // x2 //</lines>
    </verse>
  </lyrics>
</song>
